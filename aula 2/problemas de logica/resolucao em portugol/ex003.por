algoritmo "contagem regressiva"

var
numero_inicial: inteiro

inicio

leia(numero_inicial)

enquanto numero_inicial <=0 faca
leia(numero_inicial)
fimenquanto

enquanto numero_inicial >= 0 faca
escreval(numero_inicial)
numero_inicial <- numero_inicial - 1
fimenquanto
// Seção de Comandos 
fimalgoritmo